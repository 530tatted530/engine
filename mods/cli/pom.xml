                        <version>5.3</version>
                    </dependency>
                </dependencies>
            </plugin>
            -->
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>debug</id>
            <build>
                <directory>../../dist/debug</directory>
            </build>
        </profile>
        <profile>
            <id>test</id>
            <build>
                <directory>../../dist/test</directory>
            </build>
        </profile>
        <profile>
            <id>release</id>
            <build>
                <directory>../../dist/release</directory>
            </build>
        </profile>
    </profiles>

</project>

